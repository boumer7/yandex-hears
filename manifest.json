{
  "manifest_version": 3,
  "name": "Яндекс Cлышит",
  "version": "1.0",
  "description": "Заменяет предупреждения Яндекса шуточными фразами",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Мы тебя слышим"
  },
  "content_scripts": [
    {
      "matches": ["*://yandex.ru/*", "*://*.yandex.ru/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["scripting"],
  "host_permissions": ["https://yandex.ru/*", "https://*.yandex.ru/*"]
}
